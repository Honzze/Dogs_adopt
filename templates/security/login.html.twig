{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            vous etes deja connecter en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">deconnexion</a>
        </div>
    {% endif %}

    <h1 class="titre_member">Connecter vous ici</h1>
    <div class="loginContainer">
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control-email" autocomplete="email" required autofocus>
        <label for="inputPassword">Mots de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control-password" autocomplete="current-password" required>
        <input type="hidden" class="btn-login"name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >
        <button class="btn-login" type="submit">
            Valider
        </button>
    </div>


    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

</form>
{% endblock %}
